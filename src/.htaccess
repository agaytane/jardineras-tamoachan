<IfModule mod_rewrite.c>
    RewriteEngine On
    Options -Indexes
    
    # ✅ Permitir archivos reales (CSS, JS, imágenes)
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^ - [L]
    
    # ✅ Permitir directorios reales
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]
    
    # ✅ Redirigir todo a index.php (URLs limpias)
    RewriteRule ^ index.php [L]
</IfModule>